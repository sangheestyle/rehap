{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
      {
        "name": "node-app-template",
        "host": {
          "sourcePath": "/var/app/current/app"
        }
      }
    ],
    "containerDefinitions": [
      {
        "name": "appsvr",
        "image": "sangheestyle/rehap_appsvr",
        "essential": true,
        "memory": 128,
        "mountPoints": [
          {
            "sourceVolume": "node-app-template",
            "containerPath": "/var/opt/app",
            "readOnly": true
          }
        ]
      },
      {
        "name": "nginx-proxy",
        "image": "sangheestyle/rehap_nginx",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 8080
          }
        ],
        "links": [
          "appsvr"
        ],
        "mountPoints": [
          {
            "sourceVolume": "awseb-logs-nginx-proxy",
            "containerPath": "/var/log/nginx"
          }
        ]
      }
    ]
  }